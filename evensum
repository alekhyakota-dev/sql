num = int(input("Enter a number: "))

even_sum = 0
odd_sum = 0

while num > 0:
    digit = num % 10
    
    if digit % 2 == 0:
        even_sum += digit
    else:
        odd_sum += digit
    
    num //= 10

print("Sum of even digits:", even_sum)
print("Sum of odd digits:", odd_sum)

if even_sum > odd_sum:
    print("Even sum is greater than Odd sum")
else:
    print("Odd sum is greater than or equal to Even sum")
